<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:padding="10dp">

    <TextView
        android:id="@+id/date_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_new_story_indicator"/>

    <ImageView
        android:id="@+id/red_dot_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/date_indicator"
        android:layout_toEndOf="@+id/date_indicator"
        android:layout_toRightOf="@+id/date_indicator"
        android:src="@drawable/dot_red"
        android:visibility="gone"
        tools:visibility="visible"/>

</RelativeLayout>